uses Crt;

var A, B, Suma : Integer;

begin
   ClrScr;
   Write( 'Introduzca primer numero (entero): ' );
   ReadLn( A );
   Write( 'Introduzca segundo numero (entero): ' );
   ReadLn( B );

   Suma := A + B;

   if ( Suma > 0 ) then
      Write( 'LA SUMA SI ES MAYOR QUE CERO.' )
   else
      Write( 'LA SUMA NO ES MAYOR QUE CERO.' );
end.
